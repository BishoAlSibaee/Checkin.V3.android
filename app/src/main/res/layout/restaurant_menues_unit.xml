<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/restaurantMenuesUnite_Photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        app:srcCompat="@drawable/home_btn" />

    <TextView
        android:id="@+id/restaurantMenuesUnite_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:gravity="start"
        android:paddingStart="3dp"
        android:paddingEnd="20dp"
        android:text="Appetizers"
        android:textAlignment="textStart"
        android:textColor="@color/light_blue_A200"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/restaurantMenuesUnite_ArabicText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:gravity="start"
        android:paddingStart="5dp"
        android:paddingEnd="3dp"
        android:text="fsfdsgsd"
        android:textAlignment="textStart"
        android:textColor="@color/light_blue_A200"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>