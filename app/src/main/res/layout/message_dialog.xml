<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/messageDialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/confermationDialog_Caption"
        android:textColor="@color/light_blue_A200"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageDialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/confermationDialog_text"
        android:textColor="@color/light_blue_A200"
        android:textColorHighlight="@color/light_blue_A200"
        android:textSize="24sp" />


    <Button
        android:id="@+id/messageDialog_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/date_bar_background"
        android:text="OK"
        android:textColor="@color/light_blue_A200"
        android:textColorHighlight="@color/light_blue_A200"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>